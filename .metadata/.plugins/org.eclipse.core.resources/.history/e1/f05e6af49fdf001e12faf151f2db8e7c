	bs.setBackground(Color.decode("#d9dbf1"));
	bs.setOpaque(true);
	bs.setBorder(null);
	bs.setText("-");
	bs.setFont(new Font("Tahoma" , Font.BOLD , 50));
	bs.addActionListener(new ActionListener() {

		@Override
		public void actionPerformed(ActionEvent e) {

            scrn2.setText(scrn1.getText());
            scrn3.setText("-");
            scrn1.setText("");
            operator = "-";
            

		}
		
		
	});
//////-----------> Button Addition
	
	ba.setBounds(370,150,80,80);
	ba.setFocusable(false);
	ba.setLayout(null);
	ba.setBackground(Color.decode("#d9dbf1"));
