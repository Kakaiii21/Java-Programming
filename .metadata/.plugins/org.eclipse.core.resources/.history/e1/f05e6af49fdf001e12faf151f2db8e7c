	bd.setFont(new Font("Tahoma" , Font.BOLD , 50));
	bd.addActionListener(new ActionListener() {

		@Override
		public void actionPerformed(ActionEvent e) {

			  scrn2.setText(scrn1.getText());
	            scrn3.setText("/");
	            scrn1.setText("");
	             operator = "/";

		}
		
		
	});
//////-----------> Button Multiplication
	
	bm.setBounds(370,350,80,80);
	bm.setFocusable(false);
	bm.setLayout(null);
	bm.setBackground(Color.decode("#d9dbf1"));
	bm.setOpaque(true);
	bm.setBorder(null);
	bm.setText("*");
	bm.setFont(new Font("Tahoma" , Font.BOLD , 50));
	bm.addActionListener(new ActionListener() {

		@Override
		public void actionPerformed(ActionEvent e) {

		    scrn2.setText(scrn1.getText());
            scrn3.setText("*");
            scrn1.setText("");
            operator = "+";

		}
		
		
	});
//////-----------> Button Equal Sign
	
	be.setBounds(370,450,80,80);
	be.setFocusable(false);
	be.setLayout(null);
	be.setBackground(Color.decode("#d9dbf1"));
	be.setOpaque(true);
	be.setBorder(null);
	be.setText("=");
	be.setFont(new Font("Tahoma" , Font.BOLD , 50));
	be.addActionListener(new ActionListener() {

		@Override
		public void actionPerformed(ActionEvent e) {

			int num1 = Integer.parseInt(scrn1.getText());
			int num2 = Integer.parseInt(scrn2.getText());
	        int result = 0;

			
	        switch (operator) {
            case "+":
                result = num1 + num2;
                break;
            case "-":
                result = num1 - num2;
                break;
            case "*":
                result = num1 * num2;
                break;
            case "/":
                if (num2 != 0) {
                    result = num1 / num2;
                } else {
                    JOptionPane.showMessageDialog(null, "Cannot divide by zero", "Error", JOptionPane.ERROR_MESSAGE);
                    return;
                }
                break;
            default:
                break;
        
        }

        scrn1.setText(String.valueOf(result));
    }
});
		
		
		this.getContentPane().setBackground(Color.decode("#eccbd9"));
