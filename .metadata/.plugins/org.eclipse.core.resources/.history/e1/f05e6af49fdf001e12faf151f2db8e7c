		@Override
		public void actionPerformed(ActionEvent e) {

		    scrn2.setText(scrn1.getText());
            scrn3.setText("+");
            scrn1.setText("");		
			operator = "+";}
		
	});

	
//////-----------> Button Division
	
	bd.setBounds(370,250,80,80);
	bd.setFocusable(false);
	bd.setLayout(null);
	bd.setBackground(Color.decode("#d9dbf1"));
	bd.setOpaque(true);
	bd.setBorder(null);
